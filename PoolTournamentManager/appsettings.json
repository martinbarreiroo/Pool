{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${AZURE_SQL_HOST};Database=${AZURE_SQL_DATABASE};Username=${AZURE_SQL_USERNAME};Password=${AZURE_SQL_PASSWORD}"
  },
  "AWS": {
    "Region": "us-east-2",
    "Profile": "default",
    "S3": {
      "BucketName": "${AWS_S3_BUCKET_NAME}",
      "ProfilePicturePath": "players/{0}/profile",
      "PresignedUrlExpirationMinutes": 15,
      "AllowedImageTypes": ["image/jpeg", "image/png"],
      "MaxFileSizeMB": 5
    }
  }
}
