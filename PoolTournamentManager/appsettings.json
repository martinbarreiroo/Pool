{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}"
  },
  "AWS": {
    "Region": "us-east-2",
    "Profile": "default",
    "S3": {
      "BucketName": "${AWS_S3_BUCKET_NAME}",
      "ProfilePicturePath": "players/{0}/profile",
      "PresignedUrlExpirationMinutes": 15,
      "AllowedImageTypes": ["image/jpeg", "image/png"],
      "MaxFileSizeMB": 5
    }
  }
}
